<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="200.0" prefWidth="517.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SSubStatusNoAttempt.SubStatusNoAttemptController">
   <children>
      <Label text="Submission status" textFill="#101111">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="4.0" />
         </VBox.margin>
      </Label>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="0.0" />
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="0.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <AnchorPane style="-fx-background-color: #F5F5F5;">
               <children>
                  <Label text="Submission status: ">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #F5F5F5;" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="subStatus" text="No attempt">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #FBFBF9;" GridPane.rowIndex="1">
               <children>
                  <Label text="Due date: ">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #FBFBF9;" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label fx:id="dueDate" text="Sunday, 28 November 2021, 12:00 AM">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #F5F5F5;" GridPane.rowIndex="2">
               <children>
                  <Label text="Time remaining: ">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #F5F5F5;" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <Label fx:id="time" text="Assignment is overdue by: 165 days 10 hours" textFill="#b92929">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #FBFBF9;" GridPane.rowIndex="3">
               <children>
                  <Label text="Grading status: ">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #FBFBF9;" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <Label fx:id="gradingStatus" text="Not graded">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </children>
         <VBox.margin>
            <Insets left="20.0" top="10.0" />
         </VBox.margin>
      </GridPane>
      <HBox alignment="CENTER">
         <children>
            <JFXButton fx:id="btnAddSub" alignment="CENTER" contentDisplay="CENTER" prefHeight="37.0" prefWidth="110.0" style="-fx-background-color: #DCDCDC;" text="Add submission" textAlignment="CENTER">
               <font>
                  <Font size="13.0" />
               </font>
               <HBox.margin>
                  <Insets top="25.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
   </children>
</VBox>
